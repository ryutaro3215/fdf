{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build fdf",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/*.c",
                "-L${workspaceFolder}/libft",
                "-lft",
				"-L${workspaceFolder}/minilibx_macos",
				"-lmlx",
				"-framework",
				"OpenGL",
				"-framework",
				"AppKit",
                "-o",
                "${workspaceFolder}/fdf"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
